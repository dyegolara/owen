{
  "name": "owen-client",
  "version": "1.0.0",
  "description": "Friend debts tracker",
  "main": "public/index.html",
  "standard": {
    "parser": "babel-eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{js, json, scss}": [
