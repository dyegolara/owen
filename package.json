  "devDependencies": {
    "@resuelve/react-scripts": "^2.2.2",
    "husky": "^1.0.0-rc.9",
    "lint-staged": "^7.2.0",
    "node-sass": "^4.9.0",
    "prettier": "^1.13.5",
    "prettier-standard": "^8.0.1",
    "standard": "^11.0.1"
  },
  "browserslist": {
    "development": [
      "last 2 chrome versions",
      "last 2 firefox versions",
