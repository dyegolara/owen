    "build": "npx parcel build public/index.html"
  },
  "dependencies": {
    "firebase": "^5.2.0",
    "firebaseui": "^3.1.1",
    "react": ">=15",
    "react-dom": "^16.4.1",
    "react-router-dom": "^4.3.1"
  },
  "devDependencies": {
    "babel-plugin-transform-class-properties": "^6.24.1",
    "husky": "^1.0.0-rc.9",
    "lint-staged": "^7.2.0",
    "node-sass": "^4.9.0",
    "parcel-bundler": "^1.6.1",
    "postcss-modules": "^1.1.0",
    "prettier": "^1.13.5",
    "prettier-standard": "^8.0.1",
    "standard": "^11.0.1"
  },
  "keywords": []
}
